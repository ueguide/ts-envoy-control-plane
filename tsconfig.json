{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noLib": false,
    "outDir": "./build",
    "removeComments": false,
    "sourceMap": true,
    "noUnusedLocals": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types", "./src/types"]
  },
  "include": ["src"],
  "exclude": ["build", "node_modules", "**/__tests__/*", "**/__mocks__/*", "src/**/*.test.ts"],
  "lib": ["es6"]
}
